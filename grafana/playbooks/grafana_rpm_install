---
- hosts: grafana_server

- name: install the nginx rpm from a remote repo
  yum:
    name: https://dl.grafana.com/oss/release/grafana-6.3.5-1.x86_64.rpm
    state: present

- name: Executing a Command Using Shell Module 
  shell: sudo /sbin/chkconfig --add grafana-server; sudo systemctl enable grafana-server.service; sudo systemctl daemon-reload; sudo systemctl start grafana-server; sudo systemctl status grafana-server

